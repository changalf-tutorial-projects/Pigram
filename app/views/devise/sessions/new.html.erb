<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="well">
            <h2 class="text-center">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            
            <div class="panel-body">
              <%= f.input :email, placeholder: "Email", required: true, label: false, autofocus: true, input_html: {class: 'input-lg'} %>
              <%= f.input :password, placeholder: "Password", required: true, label: false, input_html: {class: 'input-lg'} %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <%= f.button :submit, "Log in", class: 'btn-lg btn-info btn-block' %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


