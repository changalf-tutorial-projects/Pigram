<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <!-- Placeholder image from http://www.futurespast.co/wp-content/themes/bh_courage/assets/images/placeholder_featured_image.svg -->
        <%= image_tag '/assets/placeholder-img.svg', id: 'image-preview', class: 'img-responsive' %>
        <%= simple_form_for @post, html: {multipart: true} do |f| %>
          <div class="row">
            <div class="col-md-12 text-center">
              <%= f.error_notification %>
            </div>
          </div>
          <div class="container-fluid">
            <div class="form-group text-center">
              <h4>Post a photo</h4>
              <%= f.input :image, label: false, required: true, input_html: {class: 'input-sm', onChange: 'loadFile(event)'} %>
              <%= f.input :caption, label: false, required: true, placeholder: "Enter a caption" %>
              <%= f.button :submit, class: "btn btn-primary btn-block" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  



