<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well post-well">
        <div class="text-center">
          <h2>Update Picture</h2>
          <br>
          <%= image_tag(@post.image.url, height: '350', width: '350') %>
        </div>
        <br>
        <%= render 'form' %>
        <div class="edit-links text-center">
          <button type="button" class="btn btn-default btn-xs">
            <%= link_to "Delete", post_path(@post.id), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
          </button>
          |
          <button type="button" class="btn btn-default btn-xs">
            <%= link_to "Cancel", posts_path %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>