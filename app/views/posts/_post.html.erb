<div class="container">
  <div class="row posts-wrapper">
    <div class="col-md-12">
      <div class="post">
      <div class="post-head">
        <div class="thumb-img">
        </div>
        <div class="user-name">
          <%= link_to post.user.username, profile_path(post.user.username) %>
        </div>
        <div class="time-ago">
          <%= time_ago_in_words(post.created_at) %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post) %>
      </div>
      <div class="post-bottom">
        <%= render 'posts/likes', post: post %>
        <div class="caption">
          <div class="caption-content">
            <div class="user-name">
              <%= link_to post.user.username, profile_path(post.user.username) %>
            </div>
            <%= post.caption %>
          </div>
          <br>
          <br>
          <div class="comments" id="comments_<%= post.id %>">   
            <% if post.comments.any? %>
              <div class="paginator" id="#comments-paginator-<%= post.id %>">
                <% unless post.comments.count <= 4 %>
                  <%= link_to post_comments_path(post), remote: true, class: "more-comments", data: {post_id: "#{post.id}", type: "html"} do %>
                    <i class="fa fa-comments fa-3x" aria-hidden="true"></i>
                  <% end %>
                <% end %>
              </div>
              <br>
              <%= render post.comments.last(4), post: post %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="comment-like-form row">
        <div class="like-button">
          <%= link_to '', like_post_path(post.id), remote: true, id: "like_#{post.id}", class: "glyphicon glyphicon-heart-empty" %>
        </div>
        <div class="comment-form">
          <%= form_for([post, post.comments.build], remote: true) do |f| %>
            <%= f.text_field :context, placeholder: 'Add a comment.', class: "comment_content", id: "comment_content_#{post.id}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    </div>
</div>



