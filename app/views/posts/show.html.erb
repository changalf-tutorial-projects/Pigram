<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="post">
        <div class="post-head">
          <div class="name">
            Ben Walker
          </div>
        </div>
        <div class="image-individual center-block">
          <%= image_tag(@post.image.url(:medium)) %>
          <p class="caption">
            <%= @post.caption %>
          </p>
          <div class="text-center">
            <%= link_to "Edit", edit_post_path(@post.id) %> 
          </div>
          <div class="text-center">
            <%= link_to "Cancel", posts_path %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>