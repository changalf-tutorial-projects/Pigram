<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well post-well">
        <h2 class="text-center">Post a Picture</h2>
        <br>
        <%= simple_form_for @post do |f| %>
          <div class="form-group">
            <%= f.input :image %>
          </div>
           
          <div class="form-group">
            <%= f.input :caption %>
          </div>
           
          <div class="form-group">
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

 